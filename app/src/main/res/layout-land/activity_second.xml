<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Report.ReportActivity">

    <ScrollView
        android:id="@+id/scroll_view_in_land"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/back_to_all_reports"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/initial_title"
                android:textSize="@dimen/title_size" />

            <TextView
                android:id="@+id/tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/android"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/tag_text_size" />

            <TextView
                android:id="@+id/author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/artur_Vasilov_ru"
                android:textSize="@dimen/author_name_text_size" />

            <TextView
                android:id="@+id/report_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:textSize="@dimen/report_text_size" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/back_to_all_reports"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:background="@color/colorBlue"
        android:gravity="center"
        android:layout_margin="16dp"
        android:padding="@dimen/padding_back_button"
        android:text="@string/all_reports"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>